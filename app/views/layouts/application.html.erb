<!DOCTYPE html>
<html>
  <head>
    <title>Venmue</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script type="text/javascript" src="
    https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.6/semantic.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.6/semantic.css">
    <link rel="icon" type="image/png" href="/venmue.ico" sizes="32x32">
  </head>

  <body>
  <a id="top"></a>
  <div id="navcontainer" class="ui grid">
    <div id="navbar" class=" black row container">
      <div class="two wide column">   
        <a href="/"><div id="obutton"><button class="ui animated fade button" tabindex="0">
        <div class="visible content">Home</div><div class="hidden content"><i class="large home icon"></i></div></button></div></a>
      </div>
      <div class="two wide column">
        <a href="/venues"><div id="obutton"><button class="ui animated fade button" tabindex="0">
        <div class="visible content">Venues</div><div class="hidden content"><i class="large newspaper icon"></i></div></button></div></a>
      </div>
        <% if current_user %>
      <div class="two wide column">
        <a href="/venues/new"><div id="obutton"><button class="ui animated fade button" tabindex="0">
        <div class="visible content">Post Venue</div><div class="hidden content"><i class="large edit icon"></i></div></button></div></a>
      </div>
      <div class="two wide column">
        <div id="obutton"><%= button_to 'Sign out',  destroy_user_session_path, :id => "butt", :class => "ui button", method: :delete, data: { confirm: 'Are you sure?' } %></div>
      </div>
        <% else %>
      <div class="two wide column">
        <a href="/users/sign_in"><div id="obutton"><button class="ui animated fade button" tabindex="0">
        <div class="visible content">Sign In</div><div class="hidden content"><i class="large sign in icon"></i></div></button></a></div>
      </div>
        <% end %>
      <p id="searchtext"> Find a venue nearby! </p>
      <div id="searching">
      <%= form_tag venues_path, :method => :get do %>
        <div class="ui search">
          <div class="ui icon input">
            <%= text_field_tag :search, params[:search], :class => "prompt", :placeholder => "Search by area" %>
            <i class="search icon"></i>
            <div class="results"></div>
          </div>
        </div>
      <% end %>
      </div>
      <div id="logo">
      <a href="/"><img id="jpg" src="/venmuelogo.png"></a>
      </div>
    </div>
  </div>
      <% if !current_user %>
        <br/><p>If you are new to the site, Sign up <a href="/users/sign_up"> here!</a></p>
      <% end %>
<!--   	<p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p> -->
    <%= yield %>
  </body>
</html>
